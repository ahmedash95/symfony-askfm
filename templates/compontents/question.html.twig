<div class="max-w-md w-full mb-2">
    <div class="border-r border-b border-l border-grey-light lg:border-l-0 lg:border-t lg:border-grey-light bg-white rounded-lg lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
        <div class="flex items-center mb-5">
            <img class="w-10 h-10 rounded-full mr-4" src="https://tailwindcss.com/img/jonathan.jpg" alt="Avatar of Jonathan Reinink">
            <div class="text-sm">
                <p class="text-black leading-none">{{ question.properUser.username }}</p>
                <p class="text-grey-dark"></p>
            </div>
        </div>
        <div class="mb-5">
            <div class="float-left text-black font-bold text-xl mb-2">{{ question.question }}</div>
            <a
                class="bg-blue hover:bg-blue-dark text-white font-bold py-2 px-4 rounded-full float-right"
                href="{{ path('profile_question_answer',{ 'questionId' : question.id }) }}"
            >
                Answer
            </a>
            <div class="clearfix"></div>
        </div>
    </div>
</div>