<form action="{{ url('profile_question',{ username: user.username }) }}" method="post">
    <input type="hidden" name="token" value="{{ csrf_token('profile_question') }}">
    <div class="bg-white max-w-md w-full lg:flex mb-2 rounded-lg overflow-hidden shadow-lg mb-10">
        <div class="w-full px-6 py-4 shadow">
            <div class="block text-grey-darker text-sm font-bold mb-2">Write your question</div>
            <p class="text-grey-darker text-base">
            <textarea
                    name="question"
                    id="question"
                    cols="30"
                    rows="5"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker leading-tight focus:outline-none focus:shadow-outline"
            ></textarea>
            </p>
            <div class="flix">
                <div class="border-t border-grey-lighter text-sm flex w-full mt-3">
                    <div class="flex items-center py-2 w-full">
                        <label class="md:w-2/3 block text-grey font-bold">
                            <input class="mr-2 leading-tight" type="checkbox" name="anonymous" value="1" checked>
                            <span class="text-sm">
                            Ask anonymously
                        </span>
                        </label>
                        <div class="w-1/6"></div>
                        <div class="w-1/6 items-end">
                            <button class="ml-5 flex-no-shrink bg-teal hover:bg-teal-dark border-teal hover:border-teal-dark text-sm border-4 text-white py-1 px-2 rounded">
                                Ask
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>